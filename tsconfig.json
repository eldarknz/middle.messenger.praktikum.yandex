{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@mock/*": [
                "src/mock/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@custom_types/*": [
                "src/types/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@api/*": [
                "src/core/api/*"
            ],
            "@config/*": [
                "src/core/config/*"
            ],
            "@controllers/*": [
                "src/core/controllers/*"
            ],
            "@router/*": [
                "src/core/router/*"
            ],
            "@store/*": [
                "src/core/store/*"
            ],
            "@declarations/*": [
                "declarations/*"
            ],
            "@static/*": [
                "static/*"
            ]
        },
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,   
        "removeComments": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": false,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src",
        "./declarations"
    ],
    "exclude": [
        "node_modules"
    ]
}

{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",     
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src",
        "./declarations"
    ],
    "exclude": [
        "node_modules"
    ]
}
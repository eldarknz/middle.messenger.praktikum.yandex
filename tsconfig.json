{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "removeComments": true,
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": false,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src",
        "./declarations"
    ],
    "exclude": [
        "node_modules"
    ]
}

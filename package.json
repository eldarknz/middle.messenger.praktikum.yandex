{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messenger",
  "scripts": {
    "dev": "webpack serve --mode=development --env development --config ./webpack/config.dev.js --progress",
    "build": "webpack --mode=production --env production --config ./webpack/config.prod.js",
    "start": "npm run build && node ./server.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint --fix .",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint-fix": "stylelint --fix .",
    "test": "ts-mocha src/**/*.spec.ts -require tsconfig-paths/register -r test/mock.js",
    "json-server": "json-server --watch ./test/db.json --port 3000",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eldarknz/middle.messenger.praktikum.yandex.git"
  },
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "distDir": "dist"
    }
  },
  "keywords": [],
  "author": "Eldar Kanzafarov",
  "license": "ISC",
  "engines": {
    "node": "v14.16.6"
  },
  "homepage": "https://github.com/eldarknz/middle.messenger.praktikum.yandex#readme",
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "normalize.css": "8.0.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/json-server": "0.14.4",
    "@types/mocha": "10.0.0",
    "@types/node": "18.11.9",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "chai": "4.3.7",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.27.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "html-webpack-plugin": "5.5.1",
    "husky": "8.0.3",
    "jsdom": "22.0.0",
    "json-server": "0.17.3",
    "mini-css-extract-plugin": "2.7.5",
    "mocha": "10.1.0",
    "postcss-loader": "7.3.0",
    "postcss-preset-env": "8.3.2",
    "postcss-scss": "4.0.6",
    "prettier": "2.7.1",
    "rimraf": "5.0.0",
    "sass": "1.62.1",
    "sass-loader": "13.2.2",
    "style-loader": "3.3.2",
    "stylelint": "14.14.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "9.4.2",
    "ts-mocha": "10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.8.4",
    "webpack": "5.82.0",
    "webpack-cli": "5.1.0",
    "webpack-dev-server": "4.15.0",
    "webpack-merge": "^5.8.0"
  }
}
